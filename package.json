{
  "name": "vscode-documax",
  "displayName": "Documax",
  "description": "Create Max Package Documentation with YAML",
  "publisher": "jamesbradbury",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-documax.previewDoc",
        "title": "Documax: Preview Output"
      },
      {
        "command": "vscode-documax.generateDoc",
        "title": "Documax: Generate Output"
      },
      {
        "command": "vscode-documax.toggleWatching",
        "title": "Documax: Toggle File Watching"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "mustache": "^4.2.0",
    "yaml": "^2.3.1"
  }
}
